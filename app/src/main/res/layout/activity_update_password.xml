<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.UpdatePassword">

        <RelativeLayout
                android:id="@+id/rl_hide_soft_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:clickable="true"
                android:focusable="true">

            <ImageView
                    android:id="@+id/iv_reset_password"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_login" />

            <TextView
                    android:id="@+id/tv_forget_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_reset_password"
                    android:layout_centerHorizontal="true"
                    android:text="Update Password"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold|italic" />

            <androidx.cardview.widget.CardView
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp"
                    android:layout_below="@id/tv_forget_password"
                    android:background="@drawable/round_green"
                    android:backgroundTint="@color/colorPrimaryDark"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    app:contentPadding="5dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                    <EditText
                            android:id="@+id/et_old_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:background="@drawable/round_white"
                            android:drawableStart="@drawable/ic_vpn_key"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="  Old Password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/_5sdp" />

                    <EditText
                            android:id="@+id/et_new_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_old_password"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:background="@drawable/round_white"
                            android:drawableStart="@drawable/ic_vpn_key"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="  New Password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/_5sdp" />

                    <EditText
                            android:id="@+id/et_conform_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_new_password"
                            android:layout_marginStart="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_30sdp"
                            android:background="@drawable/round_white"
                            android:drawableStart="@drawable/ic_vpn_key"
                            android:drawablePadding="@dimen/_5sdp"
                            android:hint="  Confirm Password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:padding="@dimen/_5sdp" />

                    <Button
                            android:id="@+id/btn_update_password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/et_conform_password"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/round_green"
                            android:backgroundTint="@color/whiteColor"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_5sdp"
                            android:text="Update Password"
                            android:textColor="@color/colorPrimaryDark" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
